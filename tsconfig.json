{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "preserve",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2017"],
    "sourceMap": true,
    "outDir": "./.tmp",
    "forceConsistentCasingInFileNames": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "@helper/*": ["core/helper/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@utils": ["src/utils/index"],
      "@hooks/*": ["src/hooks/*"],
      "@constants/*": ["src/constants/*"],
      "@constants": ["src/constants/index"],
      "@typings/*": ["src/typings/*"],
      "@bc-checkout/*": ["src/components/*"],
      "@uc/*": ["src/components/*"],
      "@uc": ["src/components/index"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js", "src/components/form/form.stories.mdx"],
  "exclude": ["node_modules", "dist", "./src/**/*.stories.*", "./src/**/*.test.*", "tests"]
}
